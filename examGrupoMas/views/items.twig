{% extends 'template/base.twig' %}

{% block content %}
<div class="row">
  <div class="col-xs-12 text-right"><button type="button" class="btn btn-lg addItem">Agregar Item</button>
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 table-responsive">
    <table class="table table-hover table-stripe">
      <thead>
        <tr>
          <th>Nombre del Item</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {% for item in items %}
        <tr id="{{item.id}}">
          <td>{{item.nombre}}</td>
          <td>
            <button type="button" class="btn btn-primary">Ver Items</button>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
